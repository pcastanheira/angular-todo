extends layout

block body
	.container
		p lol
		//HEADER AND TODO COUNT
		.jumbotron.text-center
			h1 this is your list <span class="label-info counter">{{ todos.length }}</span>
		//TODO LIST
		#todo-list.row
			.col-sm-4.col-sm-offset-4
				.checkbox(ng-repeat='todo in todos')
					label
						input(type='checkbox', ng-click='deleteTodo(todo._id)') 
						{{ todo.text }}
		//ENTER TODO FORM
		#todo-form.row
			.col-sm-8.col-sm-offset-2.text-center
				form
					.form-group
						//BIND VALUES TO formData.text IN ANGULAR
						input.form-control.input-lg.text-center(type='text', placeholder='need to learn NodeJS ASAP', ng-model='formData.text')
					button.btn.btn-primary.btn-lg(type='submit', ng-click='createTodo()') Add
						